<view class="container">
  <view class="header-bg">
    <view class="brand-container">
      <text class="app-title-cn">基动</text>
      <text class="app-title-en">FundMaster</text>
    </view>
  </view>

  <view class="asset-card">
    <view class="card-row">
      <text class="label">总资产(元)</text>
      </view>
    <view class="total-amount">{{total_assets}}</view>
    <view class="divider"></view>
    <view class="daily-row">
      <text class="label">当日收益</text>
      <text class="gain {{total_day_profit >= 0 ? 'up' : 'down'}}">
        {{total_day_profit >= 0 ? '+' : ''}}{{total_day_profit}}
      </text>
    </view>
  </view>

  <view class="list-container">
    <view class="list-header">
      <text class="col-name">名称/代码</text>
      <view class="col-right-group">
        <text class="col-data">涨跌幅</text>
        <text class="col-data">当日收益</text>
        <text class="col-data">持有收益</text>
      </view>
    </view>

    <block wx:if="{{funds.length > 0}}">
      <view class="list-item" wx:for="{{funds}}" wx:key="fund_code">
        <view class="item-left col-name">
          <text class="fund-name">{{item.fund_name}}</text>
          <text class="fund-code">{{item.fund_code}}</text>
        </view>
        
        <view class="item-right col-right-group">
          <text class="col-data {{item.daily_pct >= 0 ? 'up' : 'down'}}">
            {{item.daily_pct >= 0 ? '+' : ''}}{{item.daily_pct}}%
          </text>
          <text class="col-data {{item.day_profit >= 0 ? 'up' : 'down'}}">
            {{item.day_profit >= 0 ? '+' : ''}}{{item.day_profit}}
          </text>
          <text class="col-data {{item.total_profit >= 0 ? 'up' : 'down'}}">
            {{item.total_profit >= 0 ? '+' : ''}}{{item.total_profit}}
          </text>
        </view>
      </view>
    </block>
    
    <view wx:else class="empty-state">
      <text>暂无持仓，点击右下角添加</text>
    </view>
  </view>

  <view class="fab-btn" bindtap="goToAdd">
    <text>+</text>
  </view>
</view>