.page-wrapper {
  padding: 30rpx;
}

.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.no-border { border-bottom: none; }

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right; /* 输入文字靠右 */
}

.ph-style { color: #ccc; }

/* 提交按钮 */
.submit-btn {
  margin-top: 60rpx;
  background: var(--gradient-yellow);
  color: #333;
  border-radius: 50rpx; /* 胶囊形状 */
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 15rpx rgba(248, 216, 0, 0.3);
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}